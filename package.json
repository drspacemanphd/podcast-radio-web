{
  "name": "podcast-radio-web",
  "version": "0.0.1-alpha.0",
  "description": "A Podcast Radio Application Mono-repo",
  "repository": "git@github.com:drspacemanphd/podcast-radio-web.git",
  "author": "drspacemanphd",
  "license": "ISC",
  "private": true,
  "workspaces": {
    "packages": [
      "./packages/*",
      "./services/*"
    ],
    "nohoist": [
      "**/podcast-radio-rss-poller/**"
    ]
  },
  "devDependencies": {
    "lerna": "^3.22.1",
    "typescript": "^4.1.2"
  },
  "scripts": {
    "clean:infra": "rm -rf ./infrastructure/**/.terraform && rm -rf ./infrastructure/**/*.hcl && rm -rf ./infrastructure/**/*.tfstate*",
    "deploy": "lerna run build && lerna publish from-git --contents dist"
  }
}
