{
  "packages": [
    "./packages/*",
    "./services/*"
  ],
  "version": "independent",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "registry": "https://npm.pkg.github.com",
      "allowBranch": ["master", "RELEASE-*", "add-tests"]
    }
  }
}
